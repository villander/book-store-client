{{#each chunckBooks as |book|}}
  <div class="flex layout-row layout-xs-column layout-sm-column">
    {{#each book as |value|}}
      <div class="flex layout-row card-book" >
        {{#paper-card as |card|}}
          {{card.image class='book-image' src=value.volumeInfo.imageLinks.smallThumbnail alt="Washed Out" title="Washed Out"}}
          {{#card.title as |title|}}
            {{#title.text as |text|}}
              {{#text.headline}}{{value.volumeInfo.title}}{{/text.headline}}
              {{#text.headline}}
                {{format-money value.price symbol="R$ " decimal="," thousand="."}}
              {{/text.headline}}
            {{/title.text}}
          {{/card.title}}
          {{#card.actions}}
            {{#paper-button raised=true onClick=(action 'openBook' value)}}Ver mais{{/paper-button}}
            {{#paper-button primary=true  raised=true raised=true onClick=(action 'buyItem' value)}}{{paper-icon "add-shopping-cart"}}{{/paper-button}}
          {{/card.actions}}
          {{!--<div class=''>
            <p>{{value.volumeInfo.title}}</p>
            {{#paper-button}}Comprar{{/paper-button}}
          </div>--}}
          
        {{/paper-card}}
      </div>
    {{/each}}
  </div>
{{/each}}
{{#if showButtonPages}}
  {{#if hasPrevPage}}
    {{#paper-button  primary=true noink=true  onClick=(action 'prevPage')}}
      {{paper-icon 'keyboard-arrow-left'}}
      Anterior
    {{/paper-button}}
  {{/if}}
  {{#paper-button  primary=true noink=true onClick=(action 'nextPage')}}
  Pr√≥xima
  {{paper-icon 'keyboard-arrow-right'}}
  {{/paper-button}}
{{/if}}


</div>